<div class="panel panel-default">
<p id="notice"><%= notice %></p>
<div class="panel-heading"><h1>Lista Pinów</h1></div>
<div class="panel-body">
<table>
  <thead>
    <tr>
      <th>Opis</th>
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Wyświetl', pin %></td>
       <td><%= link_to 'Edycja', edit_pin_path(pin) %></td>
        <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
 <div class="panel-footer">
<%= link_to "Nowy Pin", new_pin_path %>
</div>